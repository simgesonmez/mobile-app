<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UserHealthy">


    <EditText
        android:layout_width="match_parent"
        android:hint="Kan Grubu"
        android:textAlignment="center"
        android:id="@+id/userBloodGroup"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:hint="Alerji"
        android:textAlignment="center"
        android:id="@+id/userAllergy"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:hint="HastalÄ±k"
        android:textAlignment="center"
        android:id="@+id/userIllness"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/saveInfo"
        android:hint="Bilgilerimi kaydet"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"/>
</LinearLayout>